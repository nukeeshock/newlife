# ============================================
# DATABASE (Neon PostgreSQL)
# ============================================
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# ============================================
# AUTHENTICATION
# ============================================
# JWT Secret - MUSS in Produktion geändert werden!
# Generieren mit: openssl rand -base64 32
JWT_SECRET="change-this-in-production-min-32-characters"

# Optional: Admin-Passwort für Seed-Script
ADMIN_PASSWORD="your-secure-admin-password"

# ============================================
# VERCEL BLOB (Bild-Upload)
# ============================================
BLOB_READ_WRITE_TOKEN="vercel_blob_xxxxx"

# ============================================
# ANALYTICS (Optional)
# ============================================
# Salt für IP-Hashing (DSGVO)
ANALYTICS_SALT="your-analytics-salt"

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV="development"

# ============================================
# SENTRY (Error Tracking)
# ============================================
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.de.sentry.io/xxx"
SENTRY_DSN="https://xxx@xxx.ingest.de.sentry.io/xxx"
